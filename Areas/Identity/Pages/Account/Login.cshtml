@page
@model LoginModel
@{
    ViewData["Title"] = "Вход";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-7 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h1 class="h3 mb-2">Вход</h1>
                    <p class="text-muted mb-4">Влез в профила си, за да следиш активността си.</p>

                    <form id="account" method="post" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">Имейл</label>
                            <input asp-for="Input.Email"
                                   class="form-control"
                                   autocomplete="off"
                                   autocorrect="off"
                                   autocapitalize="none"
                                   spellcheck="false" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">Парола</label>
                            <input asp-for="Input.Password"
                                   class="form-control"
                                   autocomplete="off"
                                   autocorrect="off"
                                   autocapitalize="none"
                                   spellcheck="false" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input class="form-check-input"
                                       asp-for="Input.RememberMe"
                                       autocomplete="off" />
                                <label class="form-check-label" asp-for="Input.RememberMe">Запомни ме</label>
                            </div>
                        </div>

                        <button id="login-submit" type="submit" class="btn btn-primary w-100">
                            Вход
                        </button>

                        <hr class="my-4" />

                        <div class="d-flex justify-content-between">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">
                                Нямаш акаунт? Регистрация
                            </a>
                        </div>
                    </form>

                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <hr class="my-4" />
                        <p class="text-muted mb-2">Вход с друг акаунт</p>
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" autocomplete="off">
                            <div class="d-grid gap-2">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-outline-secondary"
                                            name="provider" value="@provider.Name"
                                            title="Вход с @provider.DisplayName">
                                        @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
