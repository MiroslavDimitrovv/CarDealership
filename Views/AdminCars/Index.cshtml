@model IEnumerable<CarDealership.Models.Car>
@{
    ViewData["Title"] = "Админ панел - Коли";

    // стойности от query string за филтри
    var q = Context.Request.Query["q"].ToString();
    var type = Context.Request.Query["type"].ToString();
    var status = Context.Request.Query["status"].ToString();
}

<div class="container py-4">

    <!-- TOP ADMIN MENU -->
    <div class="mb-3">
        <ul class="nav nav-pills flex-wrap gap-2">
            <li class="nav-item">
                <a class="nav-link" asp-controller="AdminRentals" asp-action="Latest">Последни наеми</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="AdminRentals" asp-action="Cancelled">Отказани наеми</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="AdminRentals" asp-action="Occupancy">Автомобили - заетост</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="AdminUsers" asp-action="Index">Списък потребители</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" asp-controller="AdminCars" asp-action="Index">Автомобили</a>
            </li>
        </ul>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 m-0">Админ панел - Коли</h1>
        <a class="btn btn-primary" asp-action="Create">+ Нова обява</a>
    </div>

    <form method="get" class="card shadow-sm mb-3">
        <div class="card-body">
            <div class="row g-2 align-items-end">
                <div class="col-12 col-md-6">
                    <label class="form-label">Търсене</label>
                    <input name="q" value="@q" class="form-control"
                           placeholder="Марка, модел, година, гориво..." />
                </div>

                <div class="col-6 col-md-3">
                    <label class="form-label">Тип</label>
                    <select name="type" class="form-select">
                        <option value="" selected="@(string.IsNullOrEmpty(type))">Всички</option>
                        <option value="ForSale" selected="@(type == "ForSale")">Продажба</option>
                        <option value="ForRent" selected="@(type == "ForRent")">Наем</option>
                    </select>
                </div>

                <div class="col-6 col-md-3">
                    <label class="form-label">Статус</label>
                    <select name="status" class="form-select">
                        <option value="" selected="@(string.IsNullOrEmpty(status))">Всички</option>
                        <option value="Available" selected="@(status == "Available")">Available</option>
                        <option value="Rented" selected="@(status == "Rented")">Rented</option>
                        <option value="Sold" selected="@(status == "Sold")">Sold</option>
                        <option value="Unavailable" selected="@(status == "Unavailable")">Unavailable</option>
                    </select>
                </div>

                <div class="col-12 d-flex gap-2">
                    <button class="btn btn-outline-primary" type="submit">Филтрирай</button>
                    <a class="btn btn-outline-secondary"
                       asp-controller="AdminCars" asp-action="Index">
                        Изчисти
                    </a>
                </div>
            </div>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Снимка</th>
                    <th>Марка / Модел</th>
                    <th>Тип</th>
                    <th>Статус</th>
                    <th>Цена</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td style="width:110px">
                            <img src="~/images/cars/@(c.ImageFileName ?? "placeholder.jpg")"
                                 style="width:96px;height:64px;object-fit:cover;border-radius:8px" />
                        </td>
                        <td>
                            <div class="fw-semibold">@c.Brand @c.Model</div>
                            <div class="text-muted small">@c.Year • @c.Mileage km • @c.FuelType</div>
                        </td>
                        <td>@c.Type</td>
                        <td>@c.Status</td>
                        <td>
                            @if (c.Type == CarDealership.Models.Car.ListingType.ForSale)
                            {
                                <span>@(c.SalePrice?.ToString("0") ?? "-") €</span>
                            }
                            else
                            {
                                <span>@(c.RentPricePerDay?.ToString("0") ?? "-") € / ден</span>
                            }
                        </td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@c.Id">Редакция</a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@c.Id">Изтрий</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
