@model CarDealership.Models.Car
@{
    ViewData["Title"] = "Редактиране";
}

<div class="container py-4">
    <h1 class="h4 mb-3">Редактиране</h1>

    <div class="mb-3">
        <div class="text-muted small mb-2">Текуща снимка</div>
        <img src="~/images/cars/@(Model.ImageFileName ?? "placeholder.jpg")"
             style="max-width: 320px; height:auto; border-radius:10px;" />
    </div>

    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="row g-3">
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-md-6">
            <label class="form-label">Марка</label>
            <input asp-for="Brand" class="form-control" />
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label">Модел</label>
            <input asp-for="Model" class="form-control" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Година</label>
            <input asp-for="Year" class="form-control" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Километраж</label>
            <input asp-for="Mileage" class="form-control" />
            <span asp-validation-for="Mileage" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Конски сили</label>
            <input asp-for="HorsePower" class="form-control" />
            <span asp-validation-for="HorsePower" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label">Двигател</label>
            <input asp-for="Engine" class="form-control" />
            <span asp-validation-for="Engine" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label class="form-label">Гориво</label>
            <input asp-for="FuelType" class="form-control" />
            <span asp-validation-for="FuelType" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label class="form-label">Скоростна кутия</label>
            <input asp-for="Transmission" class="form-control" />
            <span asp-validation-for="Transmission" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Тип обява</label>
            <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<CarDealership.Models.Car.ListingType>()"></select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Цена продажба (€)</label>
            <input asp-for="SalePrice" class="form-control" />
            <span asp-validation-for="SalePrice" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Цена наем/ден (€)</label>
            <input asp-for="RentPricePerDay" class="form-control" />
            <span asp-validation-for="RentPricePerDay" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Статус</label>
            <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<CarDealership.Models.Car.StatusType>()"></select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Офис (локация на колата)</label>
            <select asp-for="CurrentOffice" class="form-select">
                <option value="Ruse">Офис Русе</option>
                <option value="Burgas">Офис Бургас</option>
                <option value="Sofia">Офис София</option>
                <option value="Varna">Офис Варна</option>
            </select>
        </div>
        <div class="col-12">
            <label class="form-label">Описание</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label class="form-label">Смени снимка</label>
            <input type="file" name="image" class="form-control" />
        </div>

        <div class="col-12 d-flex gap-2">
            <button class="btn btn-primary" type="submit">Запази промените</button>
            <a class="btn btn-outline-secondary" asp-action="Index">Назад</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
