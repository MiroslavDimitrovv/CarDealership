@model List<CarDealership.Models.Favorite>

@{
    ViewData["Title"] = "Любими обяви";
}

<div class="container py-4">
    <h1 class="h4 mb-3">Любими обяви</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Нямате добавени любими обяви.
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var fav in Model)
            {
                var c = fav.Car;
                if (c == null) { continue; }

                var isCatalog = (c.SalePrice ?? 0) > 0;         
                var isRental = (c.RentPricePerDay ?? 0) > 0;   

                string sourceText =
                isCatalog && isRental ? "Каталог + Наем" :
                isCatalog ? "Каталог" :
                isRental ? "Наем" :
                "Няма активна обява";

                string detailsController =
                isCatalog ? "Sales" :
                isRental ? "RentalsCatalog" :
                "Cars";

                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start gap-2">
                                <div>
                                    <h5 class="card-title mb-1">@c.Brand @c.Model</h5>
                                    <div class="text-muted small">
                                        @c.Year • @c.Mileage km
                                    </div>
                                </div>
                                <span class="badge bg-secondary">@sourceText</span>
                            </div>

                            <div class="mt-3 fw-semibold">
                                @if (isCatalog)
                                {
                                    <span>@((c.SalePrice ?? 0).ToString("0")) €</span>
                                }
                                else if (isRental)
                                {
                                    <span>@((c.RentPricePerDay ?? 0).ToString("0.00")) € / ден</span>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </div>

                            <div class="mt-auto pt-3 d-flex gap-2">
                                <a class="btn btn-outline-primary btn-sm"
                                   asp-controller="@detailsController"
                                   asp-action="Details"
                                   asp-route-id="@c.Id">
                                    Детайли
                                </a>

                                <form asp-controller="Favorites" asp-action="Toggle" method="post" class="m-0">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="carId" value="@c.Id" />
                                    <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                    <button class="btn btn-outline-danger btn-sm" type="submit">
                                        Премахни
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
