@model IEnumerable<CarDealership.Models.ViewModels.AdminUserRowVm>

@{
    ViewData["Title"] = "Потребители";
    var q = (ViewBag.Q as string) ?? "";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 m-0">Потребители</h1>

        <a class="btn btn-outline-secondary"
           asp-controller="AdminCars"
           asp-action="Index">
            ← Назад към Админ Панела
        </a>
    </div>

    <form method="get" class="row g-2 align-items-end mb-3">
        <div class="col-12 col-md-6">
            <label class="form-label">Търсене</label>
            <input class="form-control" name="q" value="@q" placeholder="Имейл, телефон, име..." />
        </div>
        <div class="col-12 col-md-auto">
            <button class="btn btn-primary" type="submit">Търси</button>
            <a class="btn btn-outline-secondary" asp-action="Index">Изчисти</a>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width: 30%">Потребител</th>
                    <th style="width: 20%">Телефон</th>
                    <th style="width: 15%">Email</th>
                    <th style="width: 20%">Роли</th>
                    <th style="width: 15%">Id</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-muted text-center">Няма потребители.</td>
                    </tr>
                }
                else
                {
                    foreach (var u in Model)
                    {
                        var fullName = $"{u.FirstName} {u.LastName}".Trim();
                        <tr>
                            <td>
                                <div class="fw-semibold">
                                    @(!string.IsNullOrWhiteSpace(fullName) ? fullName : "(без име)")
                                </div>
                                <div class="text-muted small">@u.Email</div>
                            </td>

                            <td>
                                @if (!string.IsNullOrWhiteSpace(u.PhoneNumber))
                                {
                                    <span>@u.PhoneNumber</span>
                                }
                                else
                                {
                                    <span class="text-muted">(няма)</span>
                                }
                            </td>

                            <td>
                                @if (u.EmailConfirmed)
                                {
                                    <span class="badge bg-success">Потвърден</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Непотвърден</span>
                                }
                            </td>

                            <td>
                                @if (u.Roles != null && u.Roles.Count > 0)
                                {
                                    foreach (var r in u.Roles)
                                    {
                                        <span class="badge bg-primary me-1">@r</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">(без роли)</span>
                                }
                            </td>

                            <td class="small text-muted" style="max-width:220px; word-break:break-all;">
                                @u.Id
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
