@model IEnumerable<CarDealership.Models.ViewModels.AdminUserRowVm>

@{
    ViewData["Title"] = "Потребители";
    var q = (string?)ViewBag.Q ?? "";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 m-0">Потребители</h1>

        <a class="btn btn-outline-secondary"
           asp-controller="AdminCars"
           asp-action="Index">
            ← Назад към Админ Панела
        </a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form method="get" class="row g-2 align-items-end mb-3">
        <div class="col-12 col-md-8">
            <label class="form-label">Търсене</label>
            <input class="form-control" name="q" value="@q" placeholder="Имейл, телефон, име..." />
        </div>
        <div class="col-6 col-md-2">
            <button class="btn btn-primary w-100" type="submit">Търси</button>
        </div>
        <div class="col-6 col-md-2">
            <a class="btn btn-outline-secondary w-100" asp-action="Index">Изчисти</a>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>Потребител</th>
                    <th style="width:200px">Телефон</th>
                    <th style="width:260px">Email</th>
                    <th style="width:180px">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>
                            <div class="fw-semibold">@u.DisplayName</div>
                            <div class="text-muted small">@u.Email</div>
                            @if (u.Roles.Any())
                            {
                                <div class="mt-1">
                                    @foreach (var r in u.Roles)
                                    {
                                        <span class="badge bg-primary me-1">@r</span>
                                    }
                                </div>
                            }
                        </td>

                        <td>
                            @(string.IsNullOrWhiteSpace(u.PhoneNumber) ? "(няма)" : u.PhoneNumber)
                        </td>

                        <td>
                            @u.Email
                        </td>

                        <td class="text-nowrap">
                            <div class="d-flex flex-wrap gap-2">
                                <a class="btn btn-sm btn-outline-primary"
                                   asp-action="Rentals"
                                   asp-route-userId="@u.Id">
                                    Наеми (@u.RentalsCount)
                                </a>

                                <a class="btn btn-sm btn-outline-secondary"
                                   asp-action="Edit"
                                   asp-route-userId="@u.Id">
                                    Редакция
                                </a>

                                <button class="btn btn-sm btn-outline-danger"
                                        data-bs-toggle="modal"
                                        data-bs-target="#del-@u.Id">
                                    Изтрий
                                </button>
                            </div>

                            <div class="modal fade" id="del-@u.Id" tabindex="-1">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Изтриване</h5>
                                            <button class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            Сигурен ли си, че искаш да изтриеш потребителя:
                                            <strong>@u.Email</strong>?
                                            <div class="text-muted small mt-2">
                                                Това ще изтрие и наемите + любимите му.
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button class="btn btn-outline-secondary" data-bs-dismiss="modal">Отказ</button>

                                            <form asp-action="Delete" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="userId" value="@u.Id" />
                                                <button class="btn btn-danger" type="submit">Да, изтрий</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-light border">Няма резултати.</div>
    }
</div>
