@model CarDealership.Models.ViewModels.AdminUserRentalsVm
@using CarDealership.Models

@{
    ViewData["Title"] = "Наеми на потребител";

    string BgOffice(OfficeLocation o) => o switch
    {
        OfficeLocation.Ruse => "Офис Русе",
        OfficeLocation.Burgas => "Офис Бургас",
        OfficeLocation.Sofia => "Офис София",
        OfficeLocation.Varna => "Офис Варна",
        _ => o.ToString()
    };

    string BgPay(Rental.PaymentMethod pm) => pm switch
    {
        Rental.PaymentMethod.CashOnPickup => "В брой",
        Rental.PaymentMethod.CardPrepay => "Карта",
        _ => pm.ToString()
    };
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h4 m-0">Наеми</h1>
            <div class="text-muted small">
                @Model.DisplayName • @Model.Email • @(Model.PhoneNumber ?? "(няма телефон)")
            </div>
        </div>

        <a class="btn btn-outline-secondary" asp-action="Index">← Назад</a>
    </div>

    @if (!Model.Rentals.Any())
    {
        <div class="alert alert-light border">Няма наеми.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Кола</th>
                        <th>Период</th>
                        <th>Офиси</th>
                        <th>Общо</th>
                        <th>Плащане</th>
                        <th>Статус</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model.Rentals)
                    {
                        <tr>
                            <td>
                                <div class="fw-semibold">@r.CarName</div>
                                <div class="text-muted small">CarId: @r.CarId</div>
                            </td>
                            <td>
                                @r.StartDate.ToString("dd.MM.yyyy") – @r.EndDate.ToString("dd.MM.yyyy")
                                <div class="text-muted small">@r.Days дни</div>
                            </td>
                            <td>
                                <div>Вземане: <strong>@BgOffice(r.PickupOffice)</strong></div>
                                <div>Връщане: <strong>@BgOffice(r.ReturnOffice)</strong></div>
                            </td>
                            <td>
                                <strong>@r.TotalPrice €</strong>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@BgPay(r.PayMethod)</span>
                                <div class="text-muted small">
                                    @(r.IsPaid ? "Платено" : "Неплатено")
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-light text-dark">@r.Status</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
