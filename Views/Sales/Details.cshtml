<div class="card shadow-sm">
    <div class="card-body">
        <div class="row g-4">
            <div class="col-md-7">
                <img src="~/images/cars/@(Model.ImageFileName ?? "placeholder.jpg")"
                     class="img-fluid rounded shadow-sm"
                     style="max-height:420px; width:100%; object-fit:cover;"
                     alt="@Model.Brand @Model.Model" />
            </div>

            <div class="col-md-5">
                <h2>@Model.Brand @Model.Model (@Model.Year)</h2>

                <div class="h4 text-success mb-2">
                    @((Model.SalePrice ?? 0).ToString("0")) €
                </div>

                <div class="text-muted mb-3">
                    @Model.Engine • @Model.HorsePower hp • @Model.Transmission
                </div>

                <dl class="row small">
                    <dt class="col-5">Километраж</dt>
                    <dd class="col-7">@Model.Mileage km</dd>

                    <dt class="col-5">Гориво</dt>
                    <dd class="col-7">@Model.FuelType</dd>

                    <dt class="col-5">Описание</dt>
                    <dd class="col-7">@Model.Description</dd>
                </dl>

                <button class="btn btn-success w-100"
                        data-bs-toggle="modal"
                        data-bs-target="#contactModal">
                    Купи
                </button>
            </div>
        </div>
    </div>
</div>
