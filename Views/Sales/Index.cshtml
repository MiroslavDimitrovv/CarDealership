@model CarDealership.Models.ViewModels.SalesIndexVm
@{
    ViewData["Title"] = "Продажба";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 m-0">Коли за продажба</h1>

        <button class="btn btn-outline-primary d-md-none" type="button"
                data-bs-toggle="offcanvas" data-bs-target="#filtersCanvasSale">
            Филтри
        </button>
    </div>

    <div class="row">
        <div class="col-md-3 d-none d-md-block">
            @await Html.PartialAsync("_CarFiltersSale", Model.Filter)
        </div>

        <div class="col-12 col-md-9">
            <div class="text-muted mb-2">Намерени: @Model.Cars.Count</div>

            <div class="row g-3">
                @foreach (var c in Model.Cars)
                {
                    <div class="col-12 col-lg-6">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <div class="fw-semibold">@c.Brand @c.Model</div>
                                        <div class="text-muted small">@c.Year • @c.Mileage km • @c.FuelType</div>
                                    </div>
                                    <div class="fw-bold">@((c.SalePrice ?? 0).ToString("0")) €</div>
                                </div>

                                <div class="mt-2 small text-muted">
                                    @c.Engine • @c.HorsePower hp • @c.Transmission
                                </div>

                                <div class="mt-3">
                                    <a class="btn btn-sm btn-outline-primary"
                                       asp-controller="Sales" asp-action="Details" asp-route-id="@c.Id">
                                        Детайли
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (Model.Cars.Count == 0)
            {
                <div class="alert alert-light border mt-3">Няма резултати по зададените филтри.</div>
            }
        </div>
    </div>
</div>

<div class="offcanvas offcanvas-end" tabindex="-1" id="filtersCanvasSale">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title">Филтри</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
        @await Html.PartialAsync("_CarFiltersSale", Model.Filter)
    </div>
</div>
