@model IEnumerable<CarDealership.Models.ViewModels.Support.SupportTicketRowVm>
@using CarDealership.Models

@{
    ViewData["Title"] = "Моите тикети";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 m-0">Моите тикети</h1>

        <a class="btn btn-primary" asp-controller="Support" asp-action="Create">
            + Нов тикет
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-light border">Нямаш тикети.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Дата</th>
                        <th>Тема</th>
                        <th>Категория</th>
                        <th>Приоритет</th>
                        <th>Статус</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@t.Id</td>
                            <td>@t.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                <a asp-controller="Support" asp-action="Details" asp-route-id="@t.Id">
                                    @t.Subject
                                </a>
                            </td>

                            <td>@t.Category</td>
                            <td>@t.Priority</td>
                            <td>
                                @if (t.Status == TicketStatus.Open)
                                {
                                    <span class="badge bg-warning text-dark">Open</span>
                                }
                                else if (t.Status == TicketStatus.InProgress)
                                {
                                    <span class="badge bg-primary">InProgress</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Closed</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
