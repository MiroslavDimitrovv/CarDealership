@model CarDealership.Models.ViewModels.RentalsIndexVm
@{
    ViewData["Title"] = "Наем";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 m-0">Коли под наем</h1>

        <button class="btn btn-outline-primary d-md-none" type="button"
                data-bs-toggle="offcanvas" data-bs-target="#filtersCanvasRent">
            Филтри
        </button>
    </div>

    <div class="row">
        <!-- Left filters (desktop) -->
        <div class="col-md-3 d-none d-md-block">
            @await Html.PartialAsync("_CarFiltersRent", Model.Filter)
        </div>

        <!-- Cards -->
        <div class="col-12 col-md-9">
            <div class="text-muted mb-2">Намерени: @Model.Cars.Count</div>

            <div class="row g-3">
                @foreach (var c in Model.Cars)
                {
                    <div class="col-12 col-lg-6">
                        <div class="card h-100 shadow-sm">

                            <!-- снимка НЕ на бордера: wrapper с padding -->
                            <div class="p-2 pb-0">
                                <img src="~/images/cars/@(c.ImageFileName ?? "placeholder.jpg")"
                                     class="w-100 rounded"
                                     style="height:200px; object-fit:cover;"
                                     alt="@c.Brand @c.Model" />
                            </div>

                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <div class="fw-semibold">@c.Brand @c.Model</div>
                                        <div class="text-muted small">@c.Year • @c.Mileage km • @c.FuelType</div>
                                    </div>

                                    <div class="fw-bold text-primary">
                                        @((c.RentPricePerDay ?? 0).ToString("0")) € / ден
                                    </div>
                                </div>

                                <div class="mt-2 small text-muted">
                                    @c.Engine • @c.HorsePower hp • @c.Transmission
                                </div>

                                <div class="mt-3 d-flex gap-2">
                                    <a class="btn btn-sm btn-outline-primary w-100"
                                       asp-controller="RentalsCatalog"
                                       asp-action="Details"
                                       asp-route-id="@c.Id">
                                        Детайли
                                    </a>

                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a class="btn btn-sm btn-outline-secondary"
                                           asp-controller="AdminCars"
                                           asp-action="Edit"
                                           asp-route-id="@c.Id">
                                            Редактиране
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (Model.Cars.Count == 0)
            {
                <div class="alert alert-light border mt-3">Няма резултати по зададените филтри.</div>
            }
        </div>
    </div>
</div>

<!-- Offcanvas filters (mobile) -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="filtersCanvasRent">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title">Филтри</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
        @await Html.PartialAsync("_CarFiltersRent", Model.Filter)
    </div>
</div>
